<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.mvc.controllers.CalculatorController"
      alignment="CENTER"
      spacing="15"
      style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;">

    <!-- Title -->
    <Text text="Calculator"
          style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #333333;" />

    <!-- First number input -->
    <Text text="Введіть перше число:"
          style="-fx-font-size: 16px; -fx-fill: #555555;" />
    <TextField fx:id="input1"
               style="-fx-font-size: 14px; -fx-pref-width: 250px;">
        <VBox.margin>
            <Insets top="0" right="100" bottom="0" left="100" />
        </VBox.margin>
    </TextField>

    <!-- Second number input -->
    <Text text="Введіть друге число:"
          style="-fx-font-size: 16px; -fx-fill: #555555;" />
    <TextField fx:id="input2"
               style="-fx-font-size: 14px; -fx-pref-width: 250px;">
        <VBox.margin>
            <Insets top="0" right="100" bottom="0" left="100" />
        </VBox.margin>
    </TextField>

    <!-- Arithmetic operation buttons -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="addButton" text="Додати"
                style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-pref-width: 100px;" />
        <Button fx:id="subtractButton" text="Відняти"
                style="-fx-font-size: 14px; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-pref-width: 100px;" />
        <Button fx:id="multiplyButton" text="Помножити"
                style="-fx-font-size: 14px; -fx-background-color: #FF9800; -fx-text-fill: white; -fx-pref-width: 100px;" />
        <Button fx:id="divideButton" text="Поділити"
                style="-fx-font-size: 14px; -fx-background-color: #F44336; -fx-text-fill: white; -fx-pref-width: 100px;" />
    </HBox>

    <!-- Age input and button -->
    <Text text="Введіть ваш вік:"
          style="-fx-font-size: 16px; -fx-fill: #555555;" />
    <TextField fx:id="ageInput"
               style="-fx-font-size: 14px; -fx-pref-width: 250px;">
        <VBox.margin>
            <Insets top="0" right="100" bottom="0" left="100" />
        </VBox.margin>
    </TextField>
    <Button fx:id="checkAgeButton" text="Перевірити вік"
            style="-fx-font-size: 14px; -fx-background-color: #673AB7; -fx-text-fill: white; -fx-pref-width: 150px;" />

    <!-- Multiplication table input and button -->
    <Text text="Введіть число для таблиці множення:"
          style="-fx-font-size: 16px; -fx-fill: #555555;" />
    <TextField fx:id="multiplicationInput"
               style="-fx-font-size: 14px; -fx-pref-width: 250px;">
        <VBox.margin>
            <Insets top="0" right="100" bottom="0" left="100" />
        </VBox.margin>
    </TextField>
    <Button fx:id="generateTableButton" text="Генерувати таблицю множення"
            style="-fx-font-size: 14px; -fx-background-color: #00BCD4; -fx-text-fill: white; -fx-pref-width: 200px;" />
</VBox>
